generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRESQL_URL")
}

model User {
  id          String       @id @default(uuid())
  username    String       @unique
  password    String
  isActivated Boolean      @default(false)
  role        Int
  createdAt   DateTime     @default(now())
  assesments  Assesment[]
  invitations Invitation[]
  manuscripts Manuscript[]
  profile     Profile?
  teams       Team[]
}

model Profile {
  id          String    @id @default(uuid())
  email       String    @unique
  name        String
  degree      String?
  country     String
  phone       String
  phoneWork   String?
  gender      Int
  address     String
  addressWork String?
  birthdate   DateTime?
  position    String?
  institution String?
  department  String?
  expertise   String[]
  keywords    String[]
  userId      String    @unique
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Keyword {
  id         String       @id @default(uuid())
  keyword    String       @unique
  manuscript Manuscript[]
}

model Edition {
  id          String       @id @default(uuid())
  name        String
  doi         String
  manuscripts Manuscript[]
  isAvailable Boolean      @default(false)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

model Manuscript {
  id              String         @id @default(uuid())
  title           String
  abstract        String
  authors         String
  coverFileUrl    String
  optionalFileUrl String?
  isBlind         Boolean
  authorId        String
  createdAt       DateTime       @default(now())
  author          User           @relation(fields: [authorId], references: [id], onDelete: Cascade)
  history         History[]
  latestHistory   LatestHistory?
  team            Team?
  keywords        Keyword[]
  edition         Edition?       @relation(fields: [editionId], references: [id], onDelete: SetNull)
  editionId       String?
}

model Team {
  id           String       @id @default(uuid())
  manuscriptId String       @unique
  manuscript   Manuscript   @relation(fields: [manuscriptId], references: [id], onDelete: Cascade)
  invitations  Invitation[]
  users        User[]
}

model Invitation {
  id        String   @id @default(uuid())
  status    Int
  userId    String
  teamId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  team      Team     @relation(fields: [teamId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model LatestHistory {
  id           String     @id @default(uuid())
  manuscriptId String     @unique
  historyId    String     @unique
  history      History    @relation(fields: [historyId], references: [id], onDelete: Cascade)
  manuscript   Manuscript @relation(fields: [manuscriptId], references: [id], onDelete: Cascade)
}

model History {
  id            String         @id @default(uuid())
  status        Int
  manuscriptId  String
  submissionId  String?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  manuscript    Manuscript     @relation(fields: [manuscriptId], references: [id], onDelete: Cascade)
  submission    Submission?    @relation(fields: [submissionId], references: [id], onDelete: Cascade)
  LatestHistory LatestHistory?
  review        Review?
}

model Review {
  id        String      @id @default(uuid())
  decision  Int
  dueDate   DateTime?
  comment   String?     @default("")
  historyId String      @unique
  history   History     @relation(fields: [historyId], references: [id], onDelete: Cascade)
  assesment Assesment[]
}

model Submission {
  id      String    @id @default(uuid())
  fileUrl String
  message String?
  history History[]
}

model Assesment {
  id            String         @id @default(uuid())
  isDone        Boolean
  fileUrl       String?
  chiefFileUrl  String?
  editorComment String
  authorComment String
  decision      Int
  reviewId      String
  userId        String
  createdAt     DateTime       @default(now())
  review        Review         @relation(fields: [reviewId], references: [id], onDelete: Cascade)
  user          User           @relation(fields: [userId], references: [id], onDelete: SetNull)
  reviewAnswers ReviewAnswer[]
}

model ReviewQuestion {
  id            String         @id @default(uuid())
  question      String
  maxScale      Int
  createdAt     DateTime       @default(now())
  reviewAnswers ReviewAnswer[]
}

model ReviewAnswer {
  id               String         @id @default(uuid())
  answer           Int
  reviewQuestionId String
  assesmentId      String
  assesment        Assesment      @relation(fields: [assesmentId], references: [id], onDelete: Cascade)
  reviewQuestion   ReviewQuestion @relation(fields: [reviewQuestionId], references: [id], onDelete: Cascade)
}

model Page {
  id        String   @id @default(uuid())
  name      String
  url       String   @unique
  data      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
